<%= form_for(post) do |f| %>

  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, size: 78 %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, id: 'my-wymeditor' %>
  </div>

  <div class="actions">
    <%= f.submit 'Send', class: "wymupdate" %>
  </div>
<% end %>

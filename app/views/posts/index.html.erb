<p id="notice"><%= notice %></p>

    <% @posts.each do |post| %>
    <p class="post">
        <p class="post_title"><h3><%= post.title%></h3></p>
        <p class="post_body"><%= post.body.html_safe %></p>
        <p class="post_actions">

            <!-- <%= link_to 'Show', post %> | -->
            <% if current_user %> 
            <%= link_to 'Edit', edit_post_path(post) %> |
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
      </p>
    </p>
    <% end %>
<br>


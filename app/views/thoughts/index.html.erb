<p id="notice"><%= notice %></p>

<br>

<div class="container-fluid thou_main">

  <div class="row round_shadow">
    <div class="col-md-2">Author</div>
    <div class="col-md-8">Quote</div>
    <div class="col-md-2"></div>
  </div>


  <% @thoughts.each do |thought| %>

    <div class="row list">
      <div class="col-md-2"><%= thought.author %></div>
      <div class="col-md-8"><%= thought.quote %></div>
      <div class="col-md-2">
          <%= link_to '[E]', edit_thought_path(thought) %>
          <%= link_to '[D]', thought, method: :delete, data: { confirm: 'Are you sure?' } %>   
      </div>
    </div>



  <% end %>

  <div class="row list" style="border:0">
    <%= link_to 'New Thought', new_thought_path %>
  </div>


</div>

